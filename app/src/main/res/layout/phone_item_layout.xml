<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        style="@style/CardView.Light">

        <ImageView
            android:id="@+id/phoneImg"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@color/gray"
            />

        <TextView
            android:id="@+id/phoneName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:paddingStart="60dp"
            android:textSize="15dp"
            android:text="Xiaomi Mi Max 2"
            />

        <TextView
            android:id="@+id/screenSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="110dp"
            android:paddingTop="30dp"
            android:textSize="10dp"
            android:text="Screen size: "
            />

        <TextView
            android:id="@+id/screenResolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="110dp"
            android:paddingTop="50dp"
            android:textSize="10dp"
            android:text="Resolution: "
            />

        <TextView
            android:id="@+id/phoneWidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="110dp"
            android:paddingTop="70dp"
            android:textSize="10dp"
            android:text="Phone width: "
            />

        <TextView
            android:id="@+id/phoneType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="110dp"
            android:paddingTop="90dp"
            android:textSize="10dp"
            android:text="Phone type: "
            />
    </androidx.cardview.widget.CardView>

</RelativeLayout>